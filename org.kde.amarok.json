{
    "app-id": "org.kde.amarok",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-23.08",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "5.15-23.08",
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "23.08",
            "add-ld-path": ".",
            "no-autodownload": true,
            "autodelete": false
        }
    },
    "sdk": "org.kde.Sdk",
    "command": "amarok",
    "rename-icon": "amarok",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--device=dri",
        "--filesystem=home",
        "--filesystem=/run/media",
        "--filesystem=/media",
        "--system-talk-name=org.freedesktop.UDisks2",
        "--talk-name=org.kde.amarok.Mpris2Extensions.Player",
        "--talk-name=org.kde.kglobalaccel",
        "--talk-name=org.kde.kcookiejar5",
        "--talk-name=org.kde.StatusNotifierWatcher"
    ],
    "cleanup-commands": [
        "/app/cleanup-BaseApp.sh"
    ],
    "cleanup": [
        "/include"
    ],
    "modules": [
        {
            "name": "mariadb",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DWITH_EMBEDDED_SERVER=ON",
                "-DDEFAULT_CHARSET=utf8mb4",
                "-DDEFAULT_COLLATION=utf8mb4_unicode_ci",
                "-DPLUGIN_EXAMPLE=NO",
                "-DPLUGIN_FEDERATED=NO",
                "-DPLUGIN_FEEDBACK=NO",
                "-DWITH_EXTRA_CHARSETS=complex",
                "-DWITH_JEMALLOC=ON",
                "-DWITH_PCRE2=system",
                "-DWITH_SSL=system",
                "-DWITH_SYSTEMD=no",
                "-DWITH_UNIT_TESTS=OFF",
                "-DWITH_ZLIB=system"
            ]
            "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig",
                "/man",
                "*.a"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://rsync.osuosl.org/pub/mariadb/mariadb-11.3.2/source/mariadb-11.3.2.tar.gz",
                    "sha256": "5570778f0a2c27af726c751cda1a943f3f8de96d11d107791be5b44a0ce3fb5c",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1887,
                        "stable-only": true,
                        "url-template": "https://rsync.osuosl.org/pub/mariadb/mariadb-$version/source/mariadb-$version.gz",
                        "versions": {
                            "<": "11.4"
                        }
                    }
                }
            ]
        },
        {
            "name": "libmariadb",
            "buildsystem": "cmake-ninja",
            "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig",
                "/man",
                "*.a"
            ],
            "post-install": [
                "install -d /app/lib",
                "ln -s mariadb/libmariadb.so.3 /app/lib"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/mariadb-corporation/mariadb-connector-c/archive/refs/tags/v3.2.6.zip",
                    "sha256": "9fe6a161d1c1ff4f74bb87e4c587bbd2a14146a2bc3ba7b677633bfa0445b8b5"
                }
            ]
        },
        {
            "name": "libmygpo-qt",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DMYGPO_BUILD_TESTS=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://stefan.derkits.at/files/libmygpo-qt/libmygpo-qt.1.1.0.tar.gz",
                    "sha256": "82765a9baa7b6bb3a3277759cec9c3779eee691db9180affe35a67813346e1cd"
                }
            ]
        },
        {
            "name": "liblastfm-qt5",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTS=OFF",
                "-DCMAKE_CXX_STANDARD=14"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/lastfm/liblastfm/archive/1.1.0/liblastfm-qt5-1.1.0.tar.gz",
                    "sha256": "f61f0daa384e081a8f2bd2f7a2148babff22696e5b72ecdac86940a10100b1c8"
                }
            ],
            "modules": [
                "shared-modules/linux-audio/fftw3f.json"
            ]
        },
        {
            "name": "libmtp",
            "buildsystem": "autotools",
            "config-opts": [
                "--with-udev=/app/lib/udev"
            ],
            "cleanup": [
                "/share/doc",
                "*.a",
                "*.la"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/libmtp/libmtp-1.1.19.tar.gz",
                    "sha256": "deb4af6f63f5e71215cfa7fb961795262920b4ec6cb4b627f55b30b18aa33228"
                }
            ],
            "modules": [
                "shared-modules/libusb/libusb.json"
            ]
        },
        {
            "name": "amarok",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "install -d ${FLATPAK_DEST}/lib/ffmpeg"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/amarok/3.0.0/amarok-3.0.0.tar.xz",
                    "sha256": "14a87678305fad76a0a1daca555a6775ffa642e5ebbcccecd91f497093992c1c",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 13985,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/amarok/$version/amarok-$version.tar.xz"
                    }
                },
                {
                    "type": "patch",
                    "path": "1df673defcc4ea62edbf1a964eec289a42499a42.patch"
                }
            ]
        }
    ]
}
